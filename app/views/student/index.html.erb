<%= render "admin/adminheader" %>
<div class="container" style="width:60%; position:relative; top:100px;">
<br/>


<h3><b>Students Table</b></h3>
<br/>
<div class="container-fluid">
<table class="table table-hover">
  <thead class="thead-dark table-info">
    <tr>
      <th scope="col">RollNo</th>
      <th scope="col">Name</th>
      <th scope="col">Class</th>
      <th scope="col">BloodGroup</th>
      <th scope="col">ClassTeacher</th>
      <th scope="col">Mark</th>
      <th scope="col">Average</th>  
      <th scope="col">Grade</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @student.each do |student| %>
    <tr>
        <td><%= student.rollno %></td>
      <td><%= student.name %></td>
      <td><%= student.classroom %></td>
      <td><%= student.bloodgroup %></td>
      <td><%= student.teachername %></td>
      <td><%= student.total %></td>
      <td><%= student.average %></td>
      <td><%= student.grade %></td>
      <td><%= link_to "Show", controller:"student", action:"show", id:student.id %></td>
      <td><%= link_to "Edit", controller:"student", action:"edit", id:student.id %></td>
      <td><%= link_to "Delete", student_path(student.id), :method => :delete, :data => {:confirm => "Are you sure to delete #{student.name} Details "}  %></td>
      </tr>
<% end %>
  </tbody>
</table>
<br/>
<%= link_to "Create student", new_student_path, class:"btn btn-primary" %>
</div>
</div>